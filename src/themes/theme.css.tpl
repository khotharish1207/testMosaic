/*
 * self is a reserved word that denotes the top level element.. so in this case
 * it equates to .carousel-view
 */
self {

}

self .card-container .content-body {
    background-color: var(--cardBackgroundColor);
}

self .card-container .content-body .content-source-logo {
    color: var(--sourceLogoColor);
}

self .lf-mosaic-wrap .card-container .content-container .content-container-inner .content-body .content-body-content p {
    color: var(--textColor);
    font-family: var(--fontFamily);
}

self .lf-mosaic-wrap .card-container .content-container .content-container-inner .content-body .content-body-content p:hover{
color: var(--textColorOnHover);
}

self .lf-mosaic-wrap .card-container .content-body .content-header-inner .user-info .user-handle a {
    color: var(--userHandleColor);
}

self .lf-mosaic-wrap .card-container .content-container .content-container-inner .content-body .content-body-content p a,
self .lf-mosaic-wrap .card-container .content-container .content-container-inner .content-body .content-header-inner .user-info .user-name a {
    color: var(--brandColor);
}

self .card-container .content-body .footer .content-created-at {
    color: var(--footerTextColor);
}

self .card-container .content-body .footer .content-share-controls .content-action {
    color: var(--shareControlsColor);
}